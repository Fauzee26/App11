<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/asqq"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="9"
    tools:context="fauzi.hilmy.app11.AboutDeveloper">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilee"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/fauzi"
        app:civ_border_color="#b6001b"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/namaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="#55000000"
        android:gravity="center"
        android:text="Muhammad Hilmy Fauzi"
        android:textSize="25sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerrr"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="7.5"
        android:layout_height="wrap_content" />

</LinearLayout>
